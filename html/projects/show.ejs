<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 style="border-left: 4px solid '<%= project.color || '#000000' %>'; padding-left: 12px;"><%= project.name %></h1>
            <div>
                <a href="/projects/<%= project._id %>/edit" class="btn btn-warning">Edit</a>
                <a href="/projects" class="btn btn-outline-secondary">Back to Projects</a>
            </div>
        </div>
        
        <p class="text-muted"><%= project.description || 'No description' %></p>
        
        <hr>
        
        <h3>Categories</h3>
        
        <% if (categories && categories.length > 0) { %>
            <div class="row">
                <% categories.forEach(category => { %>
                    <div class="col-md-4 mb-3">
                        <div class="card" style="border-left: 4px solid '<%= category.color || '#000000' %>';">
                            <div class="card-body">
                                <h5 class="card-title"><%= category.name %></h5>
                                <p class="card-text text-muted"><%= category.description || 'No description' %></p>
                                <div class="d-flex gap-2">
                                    <a href="/categories/<%= category._id %>" class="btn btn-sm btn-primary">View</a>
                                    <form action="/categories/<%= category._id %>?_method=DELETE" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this category?')">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-muted">No categories yet. Create one to get started!</p>
        <% } %>
        
        <a href="/categories/new?project=<%= project._id %>" class="btn btn-primary mt-3">+ New Category</a>
    </div>
</body>
</html>